Remainder =@{"⁒"} //U+2052 //⸓

o_power= _{ Power }
Power = @{"^"}
Surd = @{"√"} //U+221A


Increase =@{"++"}
Decrease =@{"--"}


To =@{"->"}


Elvis =@{":?"}
Map =@ {"/@"}


Quote =@{"`"}
Acute =@{"´"} // U+00B4
S1 = _{"'"}
S2 = _{"\""}
S3 = _{"'''"}
S6 = _{"\"\"\""}



LogicOr =@{"||"|"∧"} //U+2227
LogicAnd =@{"&&"|"∨"} //U+2228
LogicNot =@{"¬"} //U+00AC

